{% extends '::session.html.twig' %}{% block body %}
    <div class="row">
    <div class="register-form container">
        <div class="row-fluid">
            <h1>Register</h1>
            {% if error is defined %}
                <div class="alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if message is defined and message %}
                <div class="alert-message-success">{{ message }}</div>
            {% endif %}
            <form id="register-form" class="clearfix" action="{{ path('register') }}" method="POST">
                <div class="clearfix">
                    <div class="form-group">{{ form_label(form.firstName, 'First Name') }}
                        <div class="controls">{{ form_widget(form.firstName) }}</div>
                    </div>
                    <div class="form-group">{{ form_label(form.lastName, 'Last Name') }}
                        <div class="controls">{{ form_widget(form.lastName) }}</div>
                    </div>
                    <div class="form-group">{{ form_label(form.username) }}
                        <div class="controls">{{ form_widget(form.username) }}</div>
                    </div>
                    <div class="form-group">{{ form_label(form.email) }}
                        <div class="controls">{{ form_widget(form.email) }}</div>
                    </div>
                    <div class="form-group">{{ form_label(form.plainPassword, 'Password') }}
                        <div class="controls">{{ form_widget(form.plainPassword.first) }}</div>
                    </div>
                    <div class="form-group">{{ form_label(form.plainPassword, 'Confirm Password') }}
                        <div class="controls">{{ form_widget(form.plainPassword.second) }}</div>
                    </div>
                    <br />
                    <input class="btn btn-primary" type="submit" name="submit" id="submit" value="Submit" />
                </div>
                {{ form_rest(form) }}
            </form>

            <p>Already have an account? <a href="{{ path('login') }}">Login</a></p>

        </div>
    </div>
    </div>
{% endblock %}