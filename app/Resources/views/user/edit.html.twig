{% extends 'base.html.twig' %}

{% block body %}
    <h1>User edit</h1>
    <hr />
    {% if error is defined %}
        <div class="alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if message is defined and message %}
        <div class="alert-message-success">{{ message }}</div>
    {% endif %}

    <form id="edit-form" action="{{ path('user_edit', {id: user.id}) }}" method="POST">
        <div class="clearfix">
            <div class="form-group">{{ form_label(edit_form.firstName, 'First Name') }}
                <div class="controls">{{ form_widget(edit_form.firstName) }}</div>
            </div>
            <div class="form-group">{{ form_label(edit_form.lastName, 'Last Name') }}
                <div class="controls">{{ form_widget(edit_form.lastName) }}</div>
            </div>
            <div class="form-group">{{ form_label(edit_form.username) }}
                <div class="controls">{{ form_widget(edit_form.username) }}</div>
            </div>
            <div class="form-group">{{ form_label(edit_form.email) }}
                <div class="controls">{{ form_widget(edit_form.email) }}</div>
            </div>

            <br />
            <div class="form-group">
                <input class="btn btn-primary" type="submit" name="submit" id="submit" value="Edit" />
            </div>
        </div>
    </form>


    <ul>
        <li>
            <a href="{{ path('admin_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" class="btn btn-danger btn-sm" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
